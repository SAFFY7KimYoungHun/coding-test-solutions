{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "C++: Build current file",
      "type": "shell",
      "command": "g++",
      "args": [
        "-std=c++17",
        "-O2",
        "-pipe",
        "-DLOCAL",
        "${file}",
        "-o",
        "${workspaceFolder}/build/${fileBasenameNoExtension}.exe"
      ],
      "group": "build",
      "problemMatcher": ["$gcc"],
      "options": { "cwd": "${workspaceFolder}" }
    },
    {
      "label": "Run current program",
      "type": "shell",
      "command": "\"${workspaceFolder}/build/${fileBasenameNoExtension}.exe\"",
      "options": { "cwd": "${fileDirname}" },
      "dependsOn": "C++: Build current file"
    }
  ]
}
